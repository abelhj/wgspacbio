/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Config file for defining DSL2 per module options and publishing paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Available keys to override module options:
        ext.args   = Additional arguments appended to command in module.
        ext.args2  = Second set of arguments appended to command in module (multi-tool modules).
        ext.args3  = Third set of arguments appended to command in module (multi-tool modules).
        ext.prefix = File name prefix for output files.
----------------------------------------------------------------------------------------
*/

process {

    publishDir = [
        path: { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" },
        mode: params.publish_dir_mode,
        saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
    ]

    withName: SAMPLESHEET_CHECK {
        publishDir = [
            path: { "${params.outdir}/pipeline_info" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: MERGE_BASECALL_SAMPLE {
        publishDir = [
            enabled: false
            ]
    }

    withName: PBMM2_ALIGNER {
        publishDir = [
            enabled: false
            ]
    }

    if(params.publish_sorted_bam) {
        withName: SAMTOOLS_SORT {
            publishDir = [
                path: { "${params.outdir}/${meta.sample}/" },
                pattern:  "*.{bam,bai}",
                mode: params.publish_dir_mode
                ]
    }
    } else {
        withName: SAMTOOLS_SORT {
            publishDir = [
                enabled: false
                ]
    }
    }

    withName: LONGPHASE {
        publishDir = [
            path: { "${params.outdir}/${meta.sample}/" },
            pattern:  "*.vcf*",
            mode: params.publish_dir_mode
            ]
    }

    withName: SAMTOOLS_INDEX {
        publishDir =
            [
            path: { "${params.outdir}/${meta.sample}/" },
            pattern:  "*.{haplotagged.bam,haplotagged.bam.bai}",
            mode: params.publish_dir_mode
            ]
    }

    withName: MOSDEPTH {
        publishDir = [
            path: { "${params.outdir}/${meta.sample}/" },
            pattern:  "*{mosdepth,bed}*",
            mode: params.publish_dir_mode
            ]
    }

    withName: WAKHAN_HAPCORRECT {
        publishDir = [
            path: { "${params.outdir}/${meta.sample}/" },
            pattern:  "*",
            mode: params.publish_dir_mode
            ]
    }

    withName: WAKHAN_CNA {
        publishDir = [
            path: { "${params.outdir}/${meta.sample}/" },
            pattern:  "*",
            mode: params.publish_dir_mode
            ]
    }

  withName: DEEPSOMATIC_LUMOS {
        publishDir = [
            path: { "${params.outdir}/${meta.sample}/" },
            pattern:  "*.vcf*",
            mode: params.publish_dir_mode
            ]
    }


   withName: ANNOTATE_VARIANTS {
        publishDir = [
            path: { "${params.outdir}/${meta.sample}/" },
            pattern:  "*.vcf*",
            mode: params.publish_dir_mode
            ]
    }

   withName: ANNOTATE_SOMATIC {
        publishDir = [
            path: { "${params.outdir}/${meta.sample}/" },
            pattern:  "*.vcf*",
            mode: params.publish_dir_mode
            ]
    }

   withName: SEVERUS {
       publishDir = [
            path: { "${params.outdir}/${meta.sample}/"},
            pattern: "*",
            mode: params.publish_dir_mode
            ]
    }

  
    withName: PB_CPG {
        publishDir = [
            path: { "${params.outdir}/${meta.sample}/" },
            pattern:  "*.bed.gz",
            mode: params.publish_dir_mode
        ]
    }

    withName: MODKIT_TO_BW {
        publishDir = [
            path: { "${params.outdir}/${meta.sample}/" },
            pattern:  "*bedmethyl*",
            mode: params.publish_dir_mode
        ]
    }

    withName: HAPLOTAG {
        publishDir = [
            [
            path: { "${params.outdir}/${meta.sample}/" },
            pattern:  "*.{haplotagged.bam*}",
            mode: params.publish_dir_mode
            ]
        ]
    }

    withName: SAMTOOLS_STATS {
        publishDir = [
            [
            path: { "${params.outdir}/${meta.sample}/" },
            pattern:  "*.txt",
            mode: params.publish_dir_mode
            ]
        ]
    }

    withName: CUSTOM_DUMPSOFTWAREVERSIONS {
        publishDir = [
            path: { "${params.outdir}/pipeline_info" },
            mode: params.publish_dir_mode,
            pattern: '*_versions.yml'
        ]
    }

    withName: MULTIQC {
        publishDir = [
            path: { "${params.outdir}/multiqc" },
            mode: params.publish_dir_mode,
            pattern: '*'
        ]
    }

}
